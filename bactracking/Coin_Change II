// TO PRINT THE COMBINATION
public class recursion {
    public static void main(String[] args) {  
        int coin[]={2,1,3,5};// unlimited supply of coins
        int amnt=4;
        permutation(coin, amnt, "",0);
    }

    public static void permutation(int coin[],int amnt,String ans,int idx){
        if(amnt==0){
            System.out.println(ans);
            return;
        }
        for(int i=idx;i<coin.length;i++){
            if(amnt>=coin[i]){
                permutation(coin, amnt-coin[i], ans+coin[i],i);
            }
        }
    }

}
